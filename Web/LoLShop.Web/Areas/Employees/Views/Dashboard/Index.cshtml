
@using LoLShop.Common;

<hr />
<h1 class="panel-title">Employees Dashboard</h1>

<div class="row">
    <div class="col-sm-6">
        <h2 class="panel-text" style="text-align:center">Coaching Orders</h2>
        @if (this.User.IsInRole(GlobalConstants.CoachRoleName))
        {
            <div class="card" style="width: 18rem; margin-left:180px; color:#fff; margin-top:30px; background-color:#4a2137;">
                <img class="card-img-top" src="https://res.cloudinary.com/lolshop-cloud/image/upload/v1586819541/yasuo_s6iikx.jpg" alt="Card image cap">
                <p class="card-paragraph" style="margin-top:10px;">In-Game Name:</p>
                <p class="card-paragraph">Region:</p>
                <p class="card-paragraph">Discord Tag:</p>
                <p class="card-paragraph">Purchased Hours:</p>
                <p class="card-paragraph">Riot Points:</p>
                <div class="card-body">
                    <a href="/Administration/Panel/Approve" class="btn btn-success btn-lg">FINISHED</a>
                </div>
            </div>
        }
        else
        {
            <h3 class="no-accounts-text" style="text-align:center">You need to be a coach to unlock this tab!</h3>
        }
    </div>

    <div class="col-sm-6">
        <h2 class="panel-text" style="text-align:center">Boosting Orders</h2>
        @if (this.User.IsInRole(GlobalConstants.BoosterRoleName))
        {

        }
        else
        {
            <h3 class="no-accounts-text" style="text-align:center">You need to be a booster to unlock this tab!</h3>
        }
    </div>
</div>